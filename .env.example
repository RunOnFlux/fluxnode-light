NODE_EXTRA_CA_CERTS=

# Server Configuration
PORT=9001
NODE_ENV=production

# API Authentication
# Set to true to require API keys in production
API_KEY_REQUIRED=true

# API Keys Configuration
# You can define multiple API keys with names for different clients
# Format: API_KEY_NAME=key_value
# Generate keys with: node scripts/generate-api-key.js

# Main application API key
API_KEY_MAIN=your_main_api_key_here

# Whitelisted IPs that don't need API keys (comma-separated)
# Example: 127.0.0.1,192.168.1.100
WHITELISTED_IPS=127.0.0.1

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TRANSACTION_RATE_LIMIT_WINDOW_MS=300000
TRANSACTION_RATE_LIMIT_MAX_REQUESTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_DIRECTORY=./logs

# External API URLs
EXPLORER_API_URL=https://explorer.runonflux.io/api
FLUX_API_URL=https://api.runonflux.io

# Multi-Address Configuration
# You can configure multiple addresses by using numbered suffixes
# Each address needs: NAME, COLLATERAL_ADDRESS, FLUXNODE_PRIVATE_KEY, P2SH_PRIVATE_KEY, and REDEEM_SCRIPT

# Address 1
ADDRESS_1_NAME=Primary_Titan_Collateral
ADDRESS_1_COLLATERAL_ADDRESS=your_collateral_address_here
ADDRESS_1_FLUXNODE_PRIVATE_KEY=your_fluxnode_private_key_here
ADDRESS_1_P2SH_PRIVATE_KEY=your_p2sh_private_key_here
ADDRESS_1_REDEEM_SCRIPT=your_redeem_script_here

# Address 2
ADDRESS_2_NAME=Secondary_Foundation_Collateral
ADDRESS_2_COLLATERAL_ADDRESS=your_second_collateral_address_here
ADDRESS_2_FLUXNODE_PRIVATE_KEY=your_second_fluxnode_private_key_here
ADDRESS_2_P2SH_PRIVATE_KEY=your_second_p2sh_private_key_here
ADDRESS_2_REDEEM_SCRIPT=your_second_redeem_script_here

# Add more addresses as needed following the same pattern:
# ADDRESS_3_NAME=...
# ADDRESS_3_COLLATERAL_ADDRESS=...
# etc.

# Security Configuration
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_ORIGIN=*
REQUEST_SIZE_LIMIT=102400

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Process Management
ENABLE_GRACEFUL_SHUTDOWN=true
SHUTDOWN_TIMEOUT=30000

# Cache Configuration (for external API responses)
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100